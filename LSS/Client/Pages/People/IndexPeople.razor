@page "/people"
@inject IPersonRepository personRepository

<h3>People</h3>

<div class="form-group">
	<a class="btn btn-info" href="person/create">New Person</a>
</div>

<!--<Pagination CurrentPage="@paginationDTO.Page" TotalAmountPages="totalAmountPages"
            SelectedPage="SelectedPage" />
						-->

<GenericList List="People">
	<WholeListTemplate>
	 <table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Actions</th>
					<th>Name</th>
					<th class="text-center">Photo</th>
					<th class="text-center">DOB</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in People)
				{
					<tr>
						<td> 
							<a class="btn btn-outline-success" href="/person/edit/@item.Id">Edit</a>
						  <button class="btn btn-danger" @onclick=@(() => DeleteThis(item.Id)) >Delete</button>
						</td>
						<td>
							@item.NameLast, @item.NameFirst 
						</td>
						<td class="text-center">
							<img style="width: 50px;" src="@item.Photo" /> 
						</td>
						<td class="text-center">
								@(item.DateOfBirth.HasValue 
								? item.DateOfBirth.Value.ToString("yyyy/MM/dd") : "----/--/--")
						</td>
					</tr>
				}
			</tbody>
		</table>
 </WholeListTemplate>
</GenericList>


