@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <div class="main">
        <div class="top-row px-4">
          <LoginLinks />
            <a href="https://twitter.com/robdelaney" 
               target="_blank" class="ml-md-auto" 
               title="Socialize with Larry on Twitter">
              Socialize
            </a>
        </div>

        <div class="content px-4">
          @Body
        </div>
        <div class="footer px-4">
          <footer>
            <small>&copy; @CopyrightMsg</small>
          </footer>
        </div>
    </div>
</div>

@code{
  
    public string CopyrightMsg { get; set; } = 
    $"Larry's Sartorial Shoppe 1990 - {@DateTime.Today.Year}";
  
}
